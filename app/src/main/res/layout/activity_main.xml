<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sam.van.roy.ocr_app.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/appToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/AppTheme"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/ocr_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_below="@+id/appToolbarLayout"
        >

        <com.theartofdev.edmodo.cropper.CropImageView
            android:id="@+id/CropImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            />

        <TextView
            android:id="@+id/ocrResultTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/ocr_result_text"
            android:layout_weight="1"
            android:maxLines = "500"
            android:scrollbars = "vertical"/>

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/load_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/load_btn_txt"
                android:onClick="onLoadImageClick"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/crop_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/crop_btn_txt"
                android:onClick="onCropImageClick"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/ocr_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/ocr_btn_txt"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>
