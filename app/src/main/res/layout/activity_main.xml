<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sam.van.roy.ocr_app.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/appToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/AppTheme"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        android:layout_below="@+id/appToolbarLayout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Load Image"
            android:onClick="onLoadImageClick"
            android:layout_weight="0.5"/>

        <com.theartofdev.edmodo.cropper.CropImageView
            android:id="@+id/CropImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Crop Image"
            android:onClick="onCropImageClick"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Run OCR"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="OCR TEXT will appear here"
            android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>
